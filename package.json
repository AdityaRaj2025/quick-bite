{
  "name": "quick-bite",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:migrate": "npm --workspace @quick-bite/api-gateway run migrate"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
